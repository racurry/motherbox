# Ghostty Terminal Configuration
# https://ghostty.org/docs/config/reference


##### FONTS #####

font-family = FiraCode Nerd Font Mono
font-size = 17


##### WINDOW #####

background-opacity = 0.85
window-padding-x = 4
window-padding-y = 4


##### macOS SPECIFIC #####

macos-option-as-alt = true
macos-titlebar-style = hidden


##### SHELL INTEGRATION #####

# Automatic shell integration (zsh, bash, fish, elvish)
shell-integration = detect


##### THEME #####

# Built-in theme (Ghostty includes many themes)
# Use `ghostty +list-themes` to see available themes
theme = Catppuccin Mocha
