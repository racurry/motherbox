{
  "[markdown]": {
    "editor.defaultFormatter": "bittorala.mdformat",
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
  },
  "claudeCode.preferredLocation": "sidebar",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.tabCompletion": "on",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "git.blame.editorDecoration.enabled": true,
  "git.openRepositoryInParentFolders": "always",
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": false,
    "scminput": false,
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "prettier.configPath": "~/.prettierrc.json5",
  "prettier.ignorePath": "~/.prettierignore",
  "prettier.printWidth": 999,
  "python.defaultInterpreterPath": "/opt/homebrew/bin/python3",
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.iconTheme": "catppuccin-latte",
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "workbench.startupEditor": "none",
  "window.newWindowProfile": "Default",
  "github.copilot.nextEditSuggestions.enabled": true,
  "redhat.telemetry.enabled": false,
  // Disable screen reader detection and accessibility support entirely
  "editor.accessibilitySupport": "off",
  "workbench.settings.applyToAllProfiles": ["editor.accessibilitySupport"],
  "terminal.integrated.enableVisualBell": false,

  // Disable ALL accessibility signals (sounds and announcements)
  "accessibility.signals.terminalBell": {
    "sound": "off",
    "announcement": "off",
  },
  "accessibility.signals.lineHasBreakpoint": { "sound": "off", "announcement": "off" },
  "accessibility.signals.lineHasError": { "sound": "off", "announcement": "off" },
  "accessibility.signals.lineHasFoldedArea": { "sound": "off", "announcement": "off" },
  "accessibility.signals.lineHasInlineSuggestion": { "sound": "off", "announcement": "off" },
  "accessibility.signals.lineHasWarning": { "sound": "off", "announcement": "off" },
  "accessibility.signals.noInlayHints": { "sound": "off", "announcement": "off" },
  "accessibility.signals.notebookCellCompleted": { "sound": "off", "announcement": "off" },
  "accessibility.signals.notebookCellFailed": { "sound": "off", "announcement": "off" },
  "accessibility.signals.onDebugBreak": { "sound": "off", "announcement": "off" },
  "accessibility.signals.taskCompleted": { "sound": "off", "announcement": "off" },
  "accessibility.signals.taskFailed": { "sound": "off", "announcement": "off" },
  "accessibility.signals.terminalCommandFailed": { "sound": "off", "announcement": "off" },
  "accessibility.signals.terminalCommandSucceeded": { "sound": "off", "announcement": "off" },
  "accessibility.signals.terminalQuickFix": { "sound": "off", "announcement": "off" },
  "accessibility.signals.diffLineDeleted": { "sound": "off", "announcement": "off" },
  "accessibility.signals.diffLineInserted": { "sound": "off", "announcement": "off" },
  "accessibility.signals.diffLineModified": { "sound": "off", "announcement": "off" },
  "accessibility.signals.chatRequestSent": { "sound": "off", "announcement": "off" },
  "accessibility.signals.chatResponseReceived": { "sound": "off", "announcement": "off" },
  "accessibility.signals.clear": { "sound": "off", "announcement": "off" },
  "accessibility.signals.save": { "sound": "off", "announcement": "off" },
  "accessibility.signals.format": { "sound": "off", "announcement": "off" },
  "accessibility.signals.voiceRecordingStarted": { "sound": "off", "announcement": "off" },
  "accessibility.signals.voiceRecordingStopped": { "sound": "off", "announcement": "off" },
  "accessibility.signals.progress": { "sound": "off", "announcement": "off" },

  // Set all sound volumes to 0
  "accessibility.signalOptions.volume": 0,

  // Disable other accessibility features
  "accessibility.dimUnfocused.enabled": false,
  "accessibility.hideAccessibleView": true,
  "accessibility.verbosity.diffEditor": false,
  "accessibility.verbosity.diffEditorActive": false,
  "accessibility.verbosity.editor": false,
  "accessibility.verbosity.hover": false,
  "accessibility.verbosity.inlineChat": false,
  "accessibility.verbosity.inlineCompletions": false,
  "accessibility.verbosity.notification": false,
  "accessibility.verbosity.panelChat": false,
  "accessibility.verbosity.terminal": false,
  "geminicodeassist.project": "watchful-destination-4ss4b",
  "settingsSync.ignoredSettings": ["geminicodeassist.project"],
}
